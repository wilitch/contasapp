@** Declarando a classe de modelo desta página *@
@model ContasApp.Presentation.Models.ContasEdicaoViewModel

<div class="mb-3">
    <h5>Edição de contas</h5>
    <p>Utilize o formulário para modificar os dados da conta.</p>
</div>

@using (Html.BeginForm())
{
    <div>
        @Html.HiddenFor(model => model.Id)
    </div>

    <div class="row mb-2">
        <div class="col-md-6">
            <label>Nome da conta:</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
        <div class="col-md-3">
            <label>Data da conta:</label>
            @Html.TextBoxFor(model => model.Data, "{0:yyyy-MM-dd}",
        new { @class = "form-control", @type = "date" })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </div>
        </div>
        <div class="col-md-3">
            <label>Valor da conta:</label>
            @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Valor)
            </div>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-6">
            <label>Categoria da conta:</label>
            @Html.DropDownListFor(model => model.CategoriaId,
        ViewBag.Categorias as List<SelectListItem>,
        "Escolha uma opção", new { @class = "form-select" })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.CategoriaId)
            </div>
        </div>
        <div class="col-md-6">
            <label>Observações da conta:</label>
            @Html.TextAreaFor(model => model.Observacoes, new { @class = "form-control" })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Observacoes)
            </div>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-12">
            <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            <a href="/Contas/Consulta" class="btn btn-light">Ir para a consulta</a>
        </div>
    </div>
}


